{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "devDependencies (non-major)",
      "automerge": true,
      "schedule": [
        "before 3am on Tuesday"
      ]
    }
  ]
}
