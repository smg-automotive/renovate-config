{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "devDependencies (non-major)",
      "labels": [
        "dev-dependency"
      ],
      "automerge": true,
      "extends": [
        "schedule:earlyMondays"
      ]
    }
  ]
}
